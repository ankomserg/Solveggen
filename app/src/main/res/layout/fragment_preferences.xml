<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PreferencesFragment">

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="8dp"
        android:text="Det viktigste for meg er at det er:"/>

    <CheckBox
        android:id="@+id/checkbox_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Temperatur"
        android:layout_gravity="top|start"/>

    <CheckBox android:id="@+id/checkbox_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ¸rt"
        android:layout_margin="24dp"
        android:layout_gravity="top|center"/>

    <CheckBox android:id="@+id/checkbox_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vindstille"
        android:layout_margin="24dp"
        android:layout_gravity="top|end"/>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </CalendarView>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Next"
        android:layout_gravity="bottom|center"/>
</FrameLayout>