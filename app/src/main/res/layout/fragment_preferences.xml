<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PreferencesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <CheckBox
        android:id="@+id/checkbox_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="onCheckboxClicked"
        android:text="Temperatur"
        android:layout_constraintBottom_toTopOf="@id/calendar"
        android:layout_constraintEnd_toEndOf="@id/checkbox_rain"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@id/text" />

    <CheckBox android:id="@+id/checkbox_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rain"
        android:layout_margin="16dp"
        android:layout_constraintTop_toBottomOf="@id/text"
        android:layout_constraintStart_toEndOf="@id/checkbox_temperature"
        android:layout_constraintEnd_toStartOf="@id/checkbox_wind"
        android:layout_constraintBottom_toTopOf="@id/calendar"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:layout_margin="16dp"
        android:layout_constraintTop_toBottomOf="@id/text"
        android:layout_constraintStart_toEndOf="@id/checkbox_rain"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintBottom_toTopOf="@id/calendar"
        android:onClick="onCheckboxClicked"/>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="@id/checkbox_rain"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent">
    </CalendarView>

</FrameLayout>